@mixin _controlPanel_container_generateParentContainer($selector) {
    #{$selector} {
	@media screen and (min-width: 768px) {
	  display: flex;
	}

	@media screen and (max-width: 767px) {
	    display: flex-inline
	}

	@content;
    }
}

@mixin _controlPanel_container_generateGenericContainer($selector, $width) {
    #{$selector} {
	@media screen and (min-width: 768px) {
	  width: $width;
	}

	@media screen and (max-width: 767px) {
	  justify-content: space-between;
	  width: 100%;
	}
	@content;
    }
}

@mixin _controlPanel_container_generateBtnContainer($selector) {
    #{$selector} {
	display: flex;
	@media screen and (max-width: 768px) {
	    align-item: center;
	}
        @content
    }
}

@mixin _controlPanel_container_btnStylize() {
    a {
	@content
    }
}

@mixin _controlPanel_container_activeStylize() {
    &-active {
	@content
    }
}

@mixin _controlPanel_container_generateEmailModule($selector){
    #{$selector} {
	label {
	    input{
		margin-top: 10px;
		margin-bottom: 10px;
	    }
	    width: 100%;
	}
	@content
    }
}

